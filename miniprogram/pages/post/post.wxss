/* pages/post/post.wxss */
.container {
  padding: 20px;
  font-family: Arial, sans-serif;
}

.title-group, .type-group, .content-group {
  margin-bottom: 20px;
}

.label {
  display: block;
  font-size: 16px;
  color: #333;
  margin-bottom: 5px;
}

.input-title, .textarea-content, .picker-display {
  border: 2px solid #007aff;
  border-radius: 8px;
  padding: 12px;
  font-size: 14px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.input-title, .picker-display {
  width: 260px;
}

.textarea-content {
  height: 400px;
  width: 260px;
}

.submit-btn {
  width: 100%;
  background-color: #007aff;
  color: white;
  padding: 12px;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  cursor: pointer;
}

